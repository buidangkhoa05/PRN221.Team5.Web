@model PRN221.Team5.Web.Pages.Dashboard.ManageAccount
<!-- Add New Modal -->
<dialog class="modal overflow-x-hidden overflow-y-auto md:inset-0 min-w-full h-modal sm:min-h-full bg-graydark/30"
    id="add_account_modal">
    <div class=" modal-box mx-auto my-10 justify-center relative w-full h-full max-w-2xl px-4 md:h-auto">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow dark:bg-graydark/80 ">
            <!-- Modal header -->
            <div class="flex items-start justify-between p-5 border-b border-gray rounded-t dark:border-graydark/60">
                <h3 class="text-xl font-semibold dark:text-white">Add New Account</h3>
                <button type="button" onclick="document.getElementById('add_account_modal').close()"
                    class="text-graydark/500 bg-transparent hover:bg-gray hover:text-graydark rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-graydark/60 dark:hover:text-white">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                            d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                            clip-rule="evenodd"></path>
                    </svg>
                </button>
            </div>
            <!-- Modal body -->
            <div class="p-6 space-y-6 modal-action">
                <form method="post">
                    <div class="grid grid-cols-6 gap-6">
                        <div class="col-span-8 sm:col-span-4">
                            <label for="full-name"
                                class="block mb-2 text-sm font-medium text-graydark dark:text-white">Full
                                Name</label>
                            <input type="text" name="full-name" id="full-name"
                                class="shadow-sm bg-gray border border-gray text-graydark sm:text-sm rounded-lg focus:ring-primary focus:border-primary block w-full p-2.5 dark:bg-graydark/60 dark:border-graydark/80 dark:placeholder-gray dark:text-white dark:focus:ring-primary dark:focus:border-primary"
                                placeholder="Bonnie" required />
                        </div>
                        <div class="col-span-4 sm:col-span-2">
                            <label for="status"
                                class="block mb-2 text-sm font-medium text-graydark dark:text-white">Status</label>
                            <select id="status"
                                class="bg-gray border-none text-graydark text-sm rounded-lg focus:ring-primary focus:border-primary block w-full p-2.5 dark:bg-graydark/70 dark:border-graydark/60 dark:placeholder-gray dark:text-white dark:focus:ring-primary dark:focus:border-primary">
                                @foreach (var status in Model.Statuses)
                                {
                                    <option value="@status.Key">@status.Value</option>
                                }

                            </select>
                        </div>

                        <div class="col-span-6 sm:col-span-3">
                            <label for="email"
                                class="block mb-2 text-sm font-medium text-graydark dark:text-white">Email</label>
                            <input type="email" name="email" value="bonnie@flowbite.com" id="email"
                                class="shadow-sm bg-gray border border-gray text-graydark sm:text-sm rounded-lg focus:ring-primary focus:border-primary block w-full p-2.5 dark:bg-graydark/60 dark:border-graydark/80 dark:placeholder-gray dark:text-white dark:focus:ring-primary dark:focus:border-primary"
                                placeholder="example@company.com" required />
                        </div>
                        <div class="col-span-6 sm:col-span-3">
                            <label for="position"
                                class="block mb-2 text-sm font-medium text-graydark dark:text-white">Position</label>
                            <select id="role" name="Role"
                                class="bg-gray border-none text-graydark text-sm rounded-lg focus:ring-primary focus:border-primary block w-full p-2.5 dark:bg-graydark/70 dark:border-graydark/60 dark:placeholder-gray dark:text-white dark:focus:ring-primary dark:focus:border-primary">
                                @foreach (var role in Model.Roles)
                                {
                                    <option value="@role.Key">@role.Value</option>
                                }

                            </select>
                        </div>
                        <div class="col-span-8 sm:col-span-4">
                            <label for="phone"
                                class="block mb-2 text-sm font-medium text-graydark dark:text-white">Phone</label>
                            <div class="flex flex-row gap-2">
                                <div
                                    class="w-fit font-bold shadow-sm bg-gray border border-gray text-graydark sm:text-sm rounded-lg focus:ring-primary focus:border-primary block p-2.5 dark:bg-graydark/60 dark:border-graydark/80 dark:placeholder-gray dark:text-white dark:focus:ring-primary dark:focus:border-primary">
                                    +84
                                </div>
                                <input type="number" name="phone" id="phone"
                                    class="shadow-sm bg-gray border border-gray text-graydark sm:text-sm rounded-lg focus:ring-primary focus:border-primary block w-full p-2.5 dark:bg-graydark/60 dark:border-graydark/80 dark:placeholder-gray dark:text-white dark:focus:ring-primary dark:focus:border-primary"
                                    placeholder="123456789" required />
                            </div>
                        </div>
                        <div class="col-span-4 sm:col-span-2">
                            <label for="age"
                                class="block mb-2 text-sm font-medium text-graydark dark:text-white">Birthday</label>

                            <input type="date" name="age" id="age"
                                class="shadow-sm bg-gray border border-gray text-graydark sm:text-sm rounded-lg focus:ring-primary focus:border-primary block w-full p-2.5 dark:bg-graydark/60 dark:border-graydark/80 dark:placeholder-gray dark:text-white dark:focus:ring-primary dark:focus:border-primary"
                                required />

                        </div>

                        <div class="col-span-4 sm:col-span-2">
                            <label for="created-date"
                                class="block mb-2 text-sm font-medium text-graydark dark:text-white">Created
                                date</label>

                            <div class="relative pointer-events-none">
                                <input type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")"
                                    class="shadow-sm bg-gray border border-gray text-graydark sm:text-sm rounded-lg focus:ring-primary focus:border-primary block w-full p-2.5 dark:bg-graydark/60 dark:border-graydark/80 dark:placeholder-gray dark:text-white dark:focus:ring-primary dark:focus:border-primary" />
                            </div>

                        </div>
                        <div class="col-span-6 sm:col-span-3">
                            <label for="created-by"
                                class="block mb-2 text-sm font-medium text-graydark dark:text-white">Created
                                by</label>
                            <select id="created-by" default="@Model.Roles.FirstOrDefault().Key"
                                class="pointer-events-none bg-gray border-none text-graydark text-sm rounded-lg focus:ring-primary focus:border-primary block w-full p-2.5 dark:bg-graydark/70 dark:border-graydark/60 dark:placeholder-gray dark:text-white dark:focus:ring-primary dark:focus:border-primary">
                                @foreach (var role in Model.Roles)
                                {
                                    <option value="@role.Key">@role.Value</option>
                                }

                            </select>
                        </div>
                        <div class="col-span-4 sm:col-span-2">
                            <label for="updated-date"
                                class="block mb-2 text-sm font-medium text-graydark dark:text-white">Updated
                                date</label>

                            <div class="relative pointer-events-none">
                                <input type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")"
                                    class="shadow-sm bg-gray border border-gray text-graydark sm:text-sm rounded-lg focus:ring-primary focus:border-primary block w-full p-2.5 dark:bg-graydark/60 dark:border-graydark/80 dark:placeholder-gray dark:text-white dark:focus:ring-primary dark:focus:border-primary" />
                            </div>

                        </div>
                        <div class="col-span-6 sm:col-span-3">
                            <label for="updated-by"
                                class="block mb-2 text-sm font-medium text-graydark dark:text-white">Updated
                                by</label>
                            <select id="updated-by" default="@Model.Roles.FirstOrDefault().Key"
                                class="pointer-events-none bg-gray border-none text-graydark text-sm rounded-lg focus:ring-primary focus:border-primary block w-full p-2.5 dark:bg-graydark/70 dark:border-graydark/60 dark:placeholder-gray dark:text-white dark:focus:ring-primary dark:focus:border-primary">
                                @foreach (var role in Model.Roles)
                                {
                                    <option value="@role.Key">@role.Value</option>
                                }

                            </select>
                        </div>
                        <div class="col-span-6 sm:col-span-3 relative" x-data="{password: true }">
                            <label for="password"
                                class="block mb-2 text-sm font-medium text-graydark dark:text-white">
                                 Password</label>
                            <input :type="password ? 'password' : 'text'" name="current-password"
                                id="password"
                                class="shadow-sm bg-gray border border-gray text-graydark sm:text-sm rounded-lg focus:ring-primary focus:border-primary block w-full p-2.5 dark:bg-graydark/60 dark:border-graydark/80 dark:placeholder-gray dark:text-white dark:focus:ring-primary dark:focus:border-primary"
                                placeholder="Enter password" required />
                            <span class="absolute right-4 top-10" x-on:click="password= !password">
                                <template x-if="password">
                                    <svg xmlns="http://www.w3.org/2000/svg" id="Outline" viewBox="0 0 24 24" width="18"
                                        height="18">
                                        <g opacity="0.5">

                                            <path
                                                d="M19,8.424V7A7,7,0,0,0,5,7V8.424A5,5,0,0,0,2,13v6a5.006,5.006,0,0,0,5,5H17a5.006,5.006,0,0,0,5-5V13A5,5,0,0,0,19,8.424ZM7,7A5,5,0,0,1,17,7V8H7ZM20,19a3,3,0,0,1-3,3H7a3,3,0,0,1-3-3V13a3,3,0,0,1,3-3H17a3,3,0,0,1,3,3Z" />
                                            <path d="M12,14a1,1,0,0,0-1,1v2a1,1,0,0,0,2,0V15A1,1,0,0,0,12,14Z" />
                                        </g>
                                    </svg>
                                </template>
                                <template x-if="!password">

                                    <svg x-if="!password" xmlns="http://www.w3.org/2000/svg" id="Outline"
                                        viewBox="0 0 24 24" width="18" height="18">
                                        <g opacity="0.5">

                                            <path
                                                d="M17,8H7V7a5,5,0,0,1,9.375-2.422,1,1,0,0,0,1.749-.971A7,7,0,0,0,5,7V8.424A5,5,0,0,0,2,13v6a5.006,5.006,0,0,0,5,5H17a5.006,5.006,0,0,0,5-5V13A5.006,5.006,0,0,0,17,8Zm3,11a3,3,0,0,1-3,3H7a3,3,0,0,1-3-3V13a3,3,0,0,1,3-3H17a3,3,0,0,1,3,3Z" />
                                            <path d="M12,14a1,1,0,0,0-1,1v2a1,1,0,0,0,2,0V15A1,1,0,0,0,12,14Z" />
                                        </g>
                                    </svg>
                                </template>
                            </span>
                        </div>
                        <div class="col-span-6 sm:col-span-3 relative" x-data="{password: true }">
                            <label for="password"
                                class="block mb-2 text-sm font-medium text-graydark dark:text-white">
                               Retype Password</label>
                            <input :type="password ? 'password' : 'text'" name="current-password"
                                id="password"
                                class="shadow-sm bg-gray border border-gray text-graydark sm:text-sm rounded-lg focus:ring-primary focus:border-primary block w-full p-2.5 dark:bg-graydark/60 dark:border-graydark/80 dark:placeholder-gray dark:text-white dark:focus:ring-primary dark:focus:border-primary"
                                placeholder="Enter password" required />
                            <span class="absolute right-4 top-10" x-on:click="password= !password">
                                <template x-if="password">
                                    <svg xmlns="http://www.w3.org/2000/svg" id="Outline" viewBox="0 0 24 24" width="18"
                                        height="18">
                                        <g opacity="0.5">

                                            <path
                                                d="M19,8.424V7A7,7,0,0,0,5,7V8.424A5,5,0,0,0,2,13v6a5.006,5.006,0,0,0,5,5H17a5.006,5.006,0,0,0,5-5V13A5,5,0,0,0,19,8.424ZM7,7A5,5,0,0,1,17,7V8H7ZM20,19a3,3,0,0,1-3,3H7a3,3,0,0,1-3-3V13a3,3,0,0,1,3-3H17a3,3,0,0,1,3,3Z" />
                                            <path d="M12,14a1,1,0,0,0-1,1v2a1,1,0,0,0,2,0V15A1,1,0,0,0,12,14Z" />
                                        </g>
                                    </svg>
                                </template>
                                <template x-if="!password">

                                    <svg x-if="!password" xmlns="http://www.w3.org/2000/svg" id="Outline"
                                        viewBox="0 0 24 24" width="18" height="18">
                                        <g opacity="0.5">

                                            <path
                                                d="M17,8H7V7a5,5,0,0,1,9.375-2.422,1,1,0,0,0,1.749-.971A7,7,0,0,0,5,7V8.424A5,5,0,0,0,2,13v6a5.006,5.006,0,0,0,5,5H17a5.006,5.006,0,0,0,5-5V13A5.006,5.006,0,0,0,17,8Zm3,11a3,3,0,0,1-3,3H7a3,3,0,0,1-3-3V13a3,3,0,0,1,3-3H17a3,3,0,0,1,3,3Z" />
                                            <path d="M12,14a1,1,0,0,0-1,1v2a1,1,0,0,0,2,0V15A1,1,0,0,0,12,14Z" />
                                        </g>
                                    </svg>
                                </template>
                            </span>
                        </div>
                        
                    </div>
                    <div class="items-center flex justify-center rounded-b dark:border-graydark/60 my-4">
                        <button type="submit"
                            class="rounded-xl inline-flex items-center justify-center gap-2.5 bg-primary h-fit py-3 px-6 text-center text-sm font-medium text-white hover:bg-opacity-90 ">

                            Save all
                        </button>
                    </div>
                </form>
                <!-- Modal footer -->

            </div>
        </div>
    </div>
</dialog>