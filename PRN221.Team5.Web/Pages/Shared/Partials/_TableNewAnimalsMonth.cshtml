<div class="rounded-sm border border-stroke bg-white px-5 pt-6 pb-2.5 shadow-default dark:border-strokedark dark:bg-boxdark sm:px-7.5 xl:pb-1">
    <div class="flex flex-row justify-between">

        <h4 class="mb-6 text-xl font-bold text-black dark:text-white">
            New animals during the last 30 days
        </h4>
        <a asp-page="/Dashboard/ManageAnimals" class="mb-6 text-base font-bold text-primary underline dark:text-white">
            View all
        </a>
    </div>

    <table id="top_animals_month" class="w-full table-auto" data-page-length="5">

    <thead class="flex flex-col">
      <tr class="grid grid-cols-3 rounded-sm bg-gray-2 dark:bg-meta-4 sm:grid-cols-5">
        <th class="p-5 flex items-center justify-center">
          <h5 class="text-sm font-medium xsm:text-base">Animal ID</h5>
        </th>
        <th class="text-center p-5 flex items-center justify-center">
          <h5 class="text-sm font-medium  xsm:text-base">Name</h5>
        </th>
        <th class="text-center p-5 flex items-center justify-center">
          <h5 class="text-sm font-medium  xsm:text-base">Specie</h5>
        </th>
        <th class="text-center p-5 flex items-center justify-center">
          <h5 class="text-sm font-medium  xsm:text-base">
            Created Date
          </h5>
        </th>
        <th class=" text-center p-5 flex items-center justify-center">
          <h5 class="text-sm font-medium  xsm:text-base">
            Created By
          </h5>
        </th>
      </tr>
    </thead>
    <tbody class="flex flex-col">
      @foreach (var animal in Model.Animals)
      {
        <tr class="grid grid-cols-3 border-b border-stroke dark:border-strokedark sm:grid-cols-5">
          <td class="flex items-center gap-3 p-5 justify-center">
            <p class="hidden font-medium text-black dark:text-white sm:block text-center">
              @animal.Id
            </p>
          </td>
          <td class="flex items-center justify-center p-5">
            <p class="font-medium text-black dark:text-white">@animal.Name</p>
          </td>
          <td class="flex items-center justify-center p-5">
            <p class="font-medium text-meta-3">@animal.Specie</p>
          </td>
          <td class="hidden items-center justify-center sm:flex p-5">
            <p class="font-medium text-black dark:text-white">
              @animal.CreatedDate
            </p>
          </td>

          <td class="hidden items-center justify-center sm:flex p-5">
            <p class="font-medium text-meta-5">@animal.CreatedBy</p>
          </td>
        </tr>

      }
    </tbody>
  </table>
</div>
