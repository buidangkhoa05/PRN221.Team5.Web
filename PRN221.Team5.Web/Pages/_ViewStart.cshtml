@{
    if (Context.Request.Path == "/Auth/Login")
    {
        Layout = "~/Pages/Shared/Views/_LoginLayout.cshtml";
    }
    else if (Context.Request.Path == "/Auth/SignUp")
    {
        Layout = "~/Pages/Shared/Views/_SignUpLayout.cshtml";
    }
    else if (Context.Request.Path == "/News"){
        Layout = "~/Pages/Shared/Views/_NewsLayout.cshtml";
    }
    else
    {
        Layout = "~/Pages/Shared/Views/_Layout.cshtml";
    }
}

