@page
@model PRN221.Team5.Web.Pages.Dashboard.ManageSections
@{
    ViewData["Title"] = "ManageSections";
}

<div x-data="{'add':false, 'edit': false }" x-init="dataTable = $('#table_sections').DataTable({
    'lengthMenu': [[5, 10, 15, -1], [5, 10, 15, 'All']],
    'responsive': true,
    'ordering': false,
})">

    <div class="mx-auto max-w-screen-2xl p-4 md:p-6 2xl:p-10">

        <div class="bg-white block sm:flex items-center justify-between lg:mt-1.5 dark:bg-graydark/80 dark:border-graydark/60">

            <nav class="flex mb-5" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 text-sm font-medium md:space-x-2">
                    <li class="inline-flex items-center">
                        <a href="#"
                           class="inline-flex items-center text-graydark/60 hover:text-primary-600 dark:text-gray dark:hover:text-white">
                            <svg class="w-5 h-5 mr-2.5" fill="currentColor" viewBox="0 0 20 20"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z">
                                </path>
                            </svg>
                            Dashboard
                        </a>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <svg class="w-6 h-6 text-gray" fill="currentColor" viewBox="0 0 20 20"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd"
                                      d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                      clip-rule="evenodd"></path>
                            </svg>
                            <a href="#"
                               class="ml-1 text-graydark/60 hover:text-primary-600 md:ml-2 dark:text-gray dark:hover:text-white">Sections</a>
                        </div>
                    </li>

                </ol>
            </nav>


        </div>

        <div class="rounded-sm border border-stroke bg-white px-5 pt-6 pb-2.5 shadow-default dark:border-strokedark dark:bg-boxdark sm:px-7.5 xl:pb-1">

            <div class="flex w-full justify-between my-4">
                <h3 class="mb-6 text-xl font-bold text-black dark:text-white">
                    All Sections
                </h3>
                <div class="flex flex-row gap-2">

                    <button id="add-section-btn" onclick="add_section_modal.showModal()"
                            class="rounded-xl inline-flex items-center justify-center gap-2.5 bg-primary h-fit py-3 px-6 text-center text-sm font-medium text-white hover:bg-opacity-90 ">
                        <span>
                            <svg xmlns="http://www.w3.org/2000/svg" id="Layer_1" data-name="Layer 1" viewBox="0 0 24 24"
                                 width="18" fill="#fff" height="18">
                                <path d="M17,12c0,.553-.448,1-1,1h-3v3c0,.553-.448,1-1,1s-1-.447-1-1v-3h-3c-.552,0-1-.447-1-1s.448-1,1-1h3v-3c0-.553,.448-1,1-1s1,.447,1,1v3h3c.552,0,1,.447,1,1Zm7-7v14c0,2.757-2.243,5-5,5H5c-2.757,0-5-2.243-5-5V5C0,2.243,2.243,0,5,0h14c2.757,0,5,2.243,5,5Zm-2,0c0-1.654-1.346-3-3-3H5c-1.654,0-3,1.346-3,3v14c0,1.654,1.346,3,3,3h14c1.654,0,3-1.346,3-3V5Z" />
                            </svg>

                        </span>
                        Add New
                    </button>
                    <button id="edit-section-btn" onclick="edit_section_modal.showModal()"
                            class="disabled:bg-graydark/20 disabled:text-graydark/30 rounded-xl inline-flex items-center justify-center gap-2.5 bg-graydark/40 h-fit py-3 px-6 text-center text-sm font-medium text-white hover:bg-opacity-90 ">
                        <span>
                            <svg xmlns="http://www.w3.org/2000/svg" id="Outline" viewBox="0 0 24 24" width="18"
                                 height="18" class="fill-current">
                                <path d="M18.656.93,6.464,13.122A4.966,4.966,0,0,0,5,16.657V18a1,1,0,0,0,1,1H7.343a4.966,4.966,0,0,0,3.535-1.464L23.07,5.344a3.125,3.125,0,0,0,0-4.414A3.194,3.194,0,0,0,18.656.93Zm3,3L9.464,16.122A3.02,3.02,0,0,1,7.343,17H7v-.343a3.02,3.02,0,0,1,.878-2.121L20.07,2.344a1.148,1.148,0,0,1,1.586,0A1.123,1.123,0,0,1,21.656,3.93Z" />
                                <path d="M23,8.979a1,1,0,0,0-1,1V15H18a3,3,0,0,0-3,3v4H5a3,3,0,0,1-3-3V5A3,3,0,0,1,5,2h9.042a1,1,0,0,0,0-2H5A5.006,5.006,0,0,0,0,5V19a5.006,5.006,0,0,0,5,5H16.343a4.968,4.968,0,0,0,3.536-1.464l2.656-2.658A4.968,4.968,0,0,0,24,16.343V9.979A1,1,0,0,0,23,8.979ZM18.465,21.122a2.975,2.975,0,0,1-1.465.8V18a1,1,0,0,1,1-1h3.925a3.016,3.016,0,0,1-.8,1.464Z" />
                            </svg>


                        </span>
                        Edit
                    </button>
                    <button id="remove-section-btn" onclick="remove_section_modal.showModal()"
                            class="disabled:bg-graydark/20 disabled:text-graydark/30 rounded-xl inline-flex items-center justify-center gap-2.5 bg-danger/20 h-fit py-3 px-6 text-center text-sm font-medium text-danger hover:bg-opacity-90 ">
                        <span>
                            <svg class="fill-current" xmlns="http://www.w3.org/2000/svg" id="Outline"
                                 viewBox="0 0 24 24" width="18" height="18">
                                <path d="M21,4H17.9A5.009,5.009,0,0,0,13,0H11A5.009,5.009,0,0,0,6.1,4H3A1,1,0,0,0,3,6H4V19a5.006,5.006,0,0,0,5,5h6a5.006,5.006,0,0,0,5-5V6h1a1,1,0,0,0,0-2ZM11,2h2a3.006,3.006,0,0,1,2.829,2H8.171A3.006,3.006,0,0,1,11,2Zm7,17a3,3,0,0,1-3,3H9a3,3,0,0,1-3-3V6H18Z" />
                                <path d="M10,18a1,1,0,0,0,1-1V11a1,1,0,0,0-2,0v6A1,1,0,0,0,10,18Z" />
                                <path d="M14,18a1,1,0,0,0,1-1V11a1,1,0,0,0-2,0v6A1,1,0,0,0,14,18Z" />
                            </svg>



                        </span>
                        Remove
                    </button>

                </div>
            </div>

            <table id="table_sections" class="w-full table-fixed">
                <thead>
                    <tr class="bg-gray-2 text-left dark:bg-meta-4">
                        <th class="w-0 font-medium text-black dark:text-white xl:pl-11 collapse">
                            Id
                        </th>
                        <th class="w-[30px] font-medium text-black dark:text-white xl:pl-11">
                            #
                        </th>
                        <th class="font-medium text-black dark:text-white xl:pl-11">
                            Name
                        </th>
                        <th class="font-medium text-black dark:text-white xl:pl-11">
                            Description
                        </th>
                        <th class=" font-medium text-black dark:text-white xl:pl-11">
                            Status
                        </th>

                        <th class=" font-medium text-black dark:text-white">
                            Created Date
                        </th>
                        <th class="font-medium text-black dark:text-white text-center">
                            Updated Date
                        </th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var itemSection in Model.Sections.Select((value, i) => new {i, value}))
                    {
                        <tr class="hover:bg-gray-3 dark:hover:bg-meta-4">
                            <td class="border-b border-[#eee] py-5 px-4 pl-9 dark:border-strokedark xl:pl-11 collapse">
                                <p class="text-black dark:text-white line-clamp-1">
                                    @itemSection.value.Id
                                </p>
                            </td>
                            <td class="border-b border-[#eee] py-5 px-4 pl-9 dark:border-strokedark xl:pl-11">
                                <p class="text-black dark:text-white line-clamp-1">
                                    @(itemSection.i + 1)
                                </p>
                            </td>
                            <td class="border-b border-[#eee] py-5 px-4 pl-9 dark:border-strokedark xl:pl-11">
                                <p class="text-black dark:text-white line-clamp-1">
                                    @itemSection.value.Name
                                </p>
                            </td>
                            <td class="border-b border-[#eee] py-5 px-4 pl-9 dark:border-strokedark xl:pl-11">
                                <p class="text-black dark:text-white line-clamp-1">
                                    @itemSection.value.Description
                                </p>
                            </td>
                            @if (@itemSection.value.ZooSectionStatus == Domain.Entity.ZooSectionStatus.Available)
                            {
                                <td class="border-b border-[#eee] py-5 px-4 dark:border-strokedark">
                                    <p class="line-clamp-1 inline-flex text-center rounded-full bg-success bg-opacity-10 py-1 px-3 text-sm font-medium text-success">
                                        @itemSection.value.ZooSectionStatus
                                    </p>
                                </td>
                            }
                            else
                            {
                                <td class="border-b border-[#eee] py-5 px-4 dark:border-strokedark">
                                    <p class="line-clamp-1 inline-flex text-center rounded-full bg-danger bg-opacity-10 py-1 px-3 text-sm font-medium text-danger">
                                        @itemSection.value.ZooSectionStatus
                                    </p>
                                </td>
                            }
                            <td class="border-b border-[#eee] py-5 px-4 pl-9 dark:border-strokedark xl:pl-11">
                                <p class="text-black dark:text-white line-clamp-1">
                                    @itemSection.value.CreatedDate
                                </p>
                            </td>

                            <td class=" border-b border-[#eee] py-5 px-4 dark:border-strokedark">
                                <p class="line-clamp-1 text-black dark:text-white ">
                                    @itemSection.value.UpdatedDate
                                </p>
                            </td>


                        </tr>

                    }

                </tbody>
            </table>
        </div>

    </div>

    <!-- Add User Modal -->
    @await Html.PartialAsync("../Shared/Partials/Modal/Sections/_ModalAddSection.cshtml")
    <!-- Edit User Modal -->
    @await Html.PartialAsync("../Shared/Partials/Modal/Sections/_ModalEditSection.cshtml")
    <!-- Delete User Modal -->
    @await Html.PartialAsync("../Shared/Partials/Modal/Sections/_ModalRemoveSection.cshtml")
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Get the DataTable instance
        const table = dataTable;
        let selectedRow = null; // Store the selected row
        let rowData = null;

        table.on('click', 'tbody tr', function () {
            const row = $(this);
            console.log(table.row(this).data());

            if (selectedRow !== null) {
                selectedRow.removeClass('selected');
            }


            if (!row.hasClass('selected')) {
                row.addClass('selected');
                selectedRow = row; // Update the selected row
            } else {
                selectedRow = null; // Deselect the current row
            }
            updateButtonState();
        });


        function updateButtonState() {
            const editButton = document.getElementById('edit-section-btn');
            const deleteButton = document.getElementById('remove-section-btn');

            if (selectedRow !== null) {
                editButton.removeAttribute('disabled'); // Enable the button
                deleteButton.removeAttribute('disabled')
            } else {
                editButton.setAttribute('disabled', 'disabled'); // Disable the button
                deleteButton.setAttribute('disabled', 'disabled'); // Disable the button
            }
        }


        const editButton = document.getElementById("edit-section-btn");
        const editI = document.getElementById("edit-i");
        const editId = document.getElementById("edit-id");
        const editName = document.getElementById("edit-name");
        const editStatus = document.getElementById("edit-status");
        const editDescription = document.getElementById("edit-description");
        editButton.addEventListener("click", function () {
            editId.value = $(table.row(selectedRow).data()[0]).text().trim();
            editI.textContent = "Edit Section #" + $(table.row(selectedRow).data()[1]).text().trim();
            editName.value = $(table.row(selectedRow).data()[2]).text().trim();
            editDescription.value = $(table.row(selectedRow).data()[3]).text().trim();
            editStatus.value = $(table.row(selectedRow).data()[4]).text().trim();
        });

        const deleteButton = document.getElementById("remove-section-btn");
        const deleteId = document.getElementById("delete-id");
        deleteButton.addEventListener("click", function () {
            deleteId.value = $(table.row(selectedRow).data()[0]).text().trim();
        });



        // Initially, set the button state based on the selectedRow
        updateButtonState();
    });

</script>