@* Paging *@
<div class="btn-group mt-2">
    @if (Model.HasPreviousPage)
    {
        <a class="btn btn-outline-dark" asp-page="Details" asp-route-pageindex="@(Model.PageIndex - 1)"
            asp-route-id="@Model.ZooSection.Id">Previous</a>
    }
    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        if (i == Model.PageIndex)
        {
            <a class="btn btn-outline-dark disabled">@i</a>
        }
        else
        {
            <a class="btn btn-outline-dark" asp-page="Details" asp-route-pageindex="@i"
                asp-route-id="@Model.ZooSection.Id">@i</a>
        }
    }
    @if (Model.HasNextPage)
    {
        <a class="btn btn-outline-dark" asp-page="Details" asp-route-pageindex="@(Model.PageIndex + 1)"
            asp-route-id="@Model.ZooSection.Id">Next</a>
    }
</div>

