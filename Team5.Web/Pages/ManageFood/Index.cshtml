    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].UpdatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].UpdatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].IsDeleted)
