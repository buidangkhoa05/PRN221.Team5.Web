<div class="btn-group">
    @if (Model.Foods.HasPrevious)
    {
        <a class="btn btn-outline-dark" asp-page="Index" asp-route-pageindex="@(Model.Foods.CurrentPage - 1)">Previous</a>
    }
    @for (int i = 1; i <= Model.Foods.TotalPages; i++)
    {
        if (i == Model.Foods.CurrentPage)
        {
            <a class="btn btn-outline-dark disabled">@i</a>
        }
        else
        {
            <a class="btn btn-outline-dark" asp-page="Index" asp-route-pageindex="@i">@i</a>
        }
    }
    @if (Model.Foods.HasNext)
    {
        <a class="btn btn-outline-dark" asp-page="Index" asp-route-pageindex="@(Model.Foods.CurrentPage + 1)">Next</a>
    }
</div>
