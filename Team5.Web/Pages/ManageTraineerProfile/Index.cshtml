@model Team5.Web.Pages.ManageTraineerProfile.IndexModel

@{
    ViewData["Title"] = "TraineerProfile";
}

<h1>TraineerProfile</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TraineerProfile[0].Account.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TraineerProfile[0].JoinDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TraineerProfile[0].OutDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TraineerProfile[0].Exprerience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TraineerProfile[0].CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TraineerProfile[0].UpdatedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TraineerProfile) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Account.Fullname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JoinDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OutDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exprerience)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedDate)
            </td>
            <td>
                @* <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> | *@
                @* <a asp-page="./Details" asp-route-id="@item.Id">Details</a> | *@
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#trainer_profile').DataTable(
                {
        @* 'lengthMenu': [[5, 10, 15, -1], [5, 10, 15, 'All']], *@
                'paging': false,
                'info': false,

                'responsive': true,
                'ordering': false,
                                        }
        );
    });
    </script>
}
